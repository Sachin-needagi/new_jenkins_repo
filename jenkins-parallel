pipeline{
    agent none
    
    stages{
      
          stage('BUILD'){
         agent{label 'master'}
		  steps{
            
             sh ''' 
                 ls
                 sleep 10 '''
            }
        }

stage('TEST_AT_A_TIME'){
agent{label 'slave1'}
parallel {		
        
        stage ('TEST-WINDOW'){
            
        steps{
            
             sh ''' 
                 ls
                 sleep 10 '''
             }
         
           }
		     
           stage ('TEST-LINUX'){
		steps{
                 sh ''' 
                   ls
                   sleep 10 '''
                   }
         
               }
          }
      }
		   
		     stage('PROD'){
                      agent{label 'master'}
                         steps{
                           sh ''' 
                            ls
                          sleep 10 '''
                  }
         
           }
       }
    }
      
      
      
      
      
      
      
  
